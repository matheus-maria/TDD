@using CursoOnline.Course.Data;
@using CursoOnline.Web.Util
@model CursoOnline.Web.Util.PaginatedList<CursoOnline.Course.VMs.CourseVM>
@{
	ViewData["Title"] = "Listagem de cursos";
}

<div id="pad-wrapper">

	<div class="row">
		<div class="col-md-12">
			<a href="/Course" class="btn">Voltar</a>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<a href="/Course/New" class="btn btn-primary">Novo</a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Nome</th>
						<th>Carga Horária</th>
						<th>Publico Alvo</th>
						<th>Valor</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@item.Name
							</td>
							<td>
								@item.Workload
							</td>
							<td>
								@item.TargetAudience
							</td>
							<td>
								@item.Value
							</td>
							<td>
								<a href="/Course/Edit/@item.Id" class="btn">Editar</a>
							</td>
						</tr>
					}
				</tbody>
			</table>

			@{
				var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
				var nextDisabled = !Model.HasNextPage ? "disabled" : "";
			}

			<a asp-action="Index"
			   asp-route-page="@(Model.PageIndex - 1)"
			   class="btn btn-default @prevDisabled">
				Anterior
			</a>
			<a asp-action="Index"
			   asp-route-page="@(Model.PageIndex + 1)"
			   class="btn btn-default @nextDisabled">
				Próximo
			</a>
		</div>
	</div>
</div>